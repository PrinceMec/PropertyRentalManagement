<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        .anchor {
            display: inline;
            text-decoration:none;
        }

            .anchor a {
                color: red !important;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">

            @if (Session["AdminId"] != null)
            {
                @Html.ActionLink("Logged as Admin", "Dashboard", "Admins", new { area = "" }, new { @class = "navbar-brand" })

            }
            else if (Session["ManagerId"] != null)
            {
                @Html.ActionLink("Logged as Manager", "Dashboard", "Managers", new { area = "" }, new { @class = "navbar-brand" })
            }
            else if (Session["TenantId"] != null)
            {
                @Html.ActionLink("Logged as Tenant", "Dashboard", "Tenants", new { area = "" }, new { @class = "navbar-brand" })
            }
            else
            {
                @Html.ActionLink("Property Rental Management System", "Login", "Admins", new { area = "" }, new { @class = "navbar-brand" })
            }





            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">


                    @if (Session["AdminId"] != null)
                    {
                        <li>@Html.ActionLink("Managers", "Index", "Managers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Tenants", "Index", "Tenants", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("TenantMessages", "Index", "TenantMessages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("ManagerMessages", "Index", "ManagerMessages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appointments", "Index", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
                        
                        <li>@Html.ActionLink("Requests", "Index", "Requests", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Admins", new { area = "" }, new { @class = "nav-link" })</li>
                        
                    }
                    else if (Session["ManagerId"] != null)
                    {
                        
                        <li>@Html.ActionLink("Messages", "GetLists", "ManagerMessages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Requests", "GetRequests", "Requests", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Managers", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else if (Session["TenantId"] != null)
                    {
                        
                        <li>@Html.ActionLink("Messages", "GetLists", "TenantMessages", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Appointments", "GetAppointments", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Tenants", new { area = "" }, new { @class = "nav-link" })</li>
                    }


                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Property Rental Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
