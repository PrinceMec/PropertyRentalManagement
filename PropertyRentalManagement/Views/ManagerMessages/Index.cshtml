@model IEnumerable<PropertyRentalManagement.Models.ManagerMessage>

@{
    ViewBag.Title = "Index";
}

<html>
<body>

    <head>
        <link href="~/CSS/List.css" rel="stylesheet" />
        <style>
            a {
                color: white !important;
                text-decoration: none;
                font-size: 18px;
            }
        </style>
    </head>

    <center>
        <h2 class="txt-title">All Messages</h2>
    </center>
    




    <style>
        ul.navigation {
            margin: 0px;
            padding: 0px;
        }

            ul.navigation li {
                display: inline;
                margin-right: 15px;
            }

        #lst {
            background-color: lightgrey;
            padding: 20px;
            border-radius: 30px;
        }
    </style>

    @foreach (var item in Model)
    {

        <div id="lst">

            @{ string fullName = item.Tenant.FirstName + " " + item.Tenant.LastName;}
            <tr>
                <td>
                    <h5>@fullName</h5>

                </td>
                <td>
                    <ul class="navigation">
                        <li><font face="verdana" size=“10”><b>Message:  </b>@Html.DisplayFor(modelItem => item.Message)</font></li>


                    </ul>

                </td>


                <td>

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id,  @class = ".anchor" })
                </td>



            </tr>
        </div>
        <br />

    }

</body>
</html>
